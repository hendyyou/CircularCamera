<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tencent.demo.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="show"/>
    <Button
        android:id="@+id/hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_below="@+id/show"
        android:text="hide"/>
    <Button
        android:id="@+id/bt_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hide"
        android:background="#0000"
        android:onClick="onClick"
        android:text="无滤镜" />

    <Button
        android:id="@+id/bt_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_none"
        android:background="#0000"
        android:onClick="onClick"
        android:text="内置滤镜" />

    <Button
        android:id="@+id/bt_extension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_inner"
        android:background="#0000"
        android:onClick="onClick"
        android:text="扩展滤镜" />
</RelativeLayout>
